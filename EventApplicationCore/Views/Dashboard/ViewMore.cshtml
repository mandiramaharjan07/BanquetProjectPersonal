@model EventApplicationCore.Model.Venue
@{
    Layout = null;




}
<div class="popup" id="Viewmorepopup" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); z-index: 9999; overflow: auto;">
    <div class="popup-content" style="background-color: #fefefe; margin: 10% auto; padding: 20px; border: 1px solid #888; width: 80%; max-width: 600px;">
        <span class="close" id="ViewMoreclose" style="color: #aaa; float: right; font-size: 28px; font-weight: bold; cursor: pointer;">&times;</span>
        <div>
            <p class="uppercase tracking-wide text-sm font-bold text-gray-700" style="font-size:34px">@Model.VenueName</p>


            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="@Model.VenueFilePath" alt="Los Angeles" style="height:450px; width:600px;">
                    </div>

                    <div class="item">
                        <img src="@Model.ImageOne" alt="Los Angeles" style="height:450px; width:600px;">
                    </div>

                    <div class="item">
                        <img src="@Model.ImageTwo" alt="Los Angeles" style="height:450px; width:600px;">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>


         <p class="text-3xl text-gray-900" style="font-size: 24px">Rs @Model.VenueCost</p>
                <p class="text-gray-700">@Model.Location</p>
        <p style="font-size: 16px; margin-bottom: 10px;">@Model.ShortDescription</p>
        <p style="font-size: 16px; margin-bottom: 10px;">@Model.LongDescription</p>
